<Database>:
    canvas.before:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
            source: f'{page_bg_dir}/database.jpg'

    BoxLayout:
        orientation: 'vertical'
        size: root.size
        spacing: 10
        padding: 20

        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, None)
            height: 50

            GoBackButton:
                on_press: root.go_back()
            Widget:
            Label:
                text: 'Total Vocabulary'
                width: 100
                size_hint: (None, 1)
            Label:
                id: total_vocab
                width: 100
                size_hint: (None, 1)

        TextInput:
            id: ti_search

            font_size: 18
            size: (0, 40)
            size_hint: (1.0, None)
            padding_x: 10
            padding_y: [self.height / 2.0 - (self.line_height / 2.0), 0]
            multiline: False
            background_color: (0.6, 0.7, 0.6, 0.7)
            on_text: root.search_text(self.text)

        ScrollView:
            size: root.size
            GridLayout:
                id: data_table
                size: (root.width, self.minimum_height)
                size_hint: (1, None)
                spacing: 1